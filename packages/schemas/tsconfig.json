{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
